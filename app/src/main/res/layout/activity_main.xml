<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:padding="7dp"
        android:text="系统默认波纹"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnCustomRippleColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/red_ripple_effect"
        android:padding="7dp"
        android:text="自定义颜色波纹"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnChangeRippleColorByJava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/red_ripple_effect"
        android:onClick="changeRippleColorByJava"
        android:padding="7dp"
        android:text="通过java改变波纹颜色"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="?attr/customBackground"
            android:padding="7dp"
            android:text="Button1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/customBackground"
            android:padding="7dp"
            android:text="Button2" />
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@android:color/darker_gray"
        android:onClick="changeRippleColorByTheme"
        android:padding="7dp"
        android:text="通过主题改变波纹颜色" />

    <com.example.tangliang.myapplication.RippleButton
        android:id="@+id/btnCustomRippleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="带系统波纹的自定义控件" />

    <com.example.tangliang.myapplication.CustomRippleButton
        android:id="@+id/crb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:text="带自定义波纹的自定义控件"
        android:layout_marginBottom="5dp"/>
</LinearLayout>
